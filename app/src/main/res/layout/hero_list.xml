<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    android:orientation="horizontal"
>

    <ImageView
        android:id="@+id/iv_hero_img"
        android:layout_width="100dp"
        android:layout_height="112dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_hero_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/colorYellow"
        app:layout_constraintEnd_toEndOf="@id/iv_hero_img"
        app:layout_constraintStart_toStartOf="@id/iv_hero_img"
        app:layout_constraintTop_toBottomOf="@id/iv_hero_img"
        android:fontFamily="@font/big_noodle_titling"
        />


</android.support.constraint.ConstraintLayout>