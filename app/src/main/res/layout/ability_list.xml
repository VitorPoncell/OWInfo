<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_ability_item_ultimate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorYellow"
        android:fontFamily="@font/big_noodle_titling"
        />

    <TextView
        android:id="@+id/txt_ability_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ability_item_ultimate"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/big_noodle_titling"
        />

    <TextView
        android:id="@+id/txt_ability_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ability_item_name"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/big_noodle_titling"
        />

</RelativeLayout>