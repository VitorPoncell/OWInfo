<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorDark">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_hero_dedtail_img"
            android:layout_width="480dp"
            android:layout_height="400dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorYellow"
            android:textSize="50dp"
            app:layout_constraintTop_toBottomOf="@id/iv_hero_dedtail_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/txt_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/txt_role"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/txt_real_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/health"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/txt_description"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_health_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_description"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/txt_description"
            app:layout_constraintStart_toEndOf="@id/txt_health"/>

        <TextView
            android:id="@+id/txt_armour_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/txt_description"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_description"/>

        <TextView
            android:id="@+id/txt_armour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_description"
            android:layout_marginTop="10dp"
            android:text="@string/armour"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toStartOf="@id/txt_armour_value"
            app:layout_constraintTop_toBottomOf="@id/txt_description"/>

        <TextView
            android:id="@+id/txt_affiliation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/affiliation"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_health"/>

        <TextView
            android:id="@+id/txt_affiliation_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@id/txt_affiliation"
            app:layout_constraintTop_toBottomOf="@id/txt_health"/>

        <TextView
            android:id="@+id/txt_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/height"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/txt_affiliation"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_height_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/txt_affiliation"
            app:layout_constraintStart_toEndOf="@id/txt_height"/>



        <TextView
            android:id="@+id/txt_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Base: "
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/txt_height"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_base_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/txt_height"
            app:layout_constraintStart_toEndOf="@id/txt_base"/>

        <TextView
            android:id="@+id/txt_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficult:"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_base"/>

        <RatingBar
            android:theme="@style/RatingBar"
            android:id="@+id/rb_difficult_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:isIndicator="true"
            android:numStars="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_difficulty"/>

        <ListView
            android:id="@+id/lv_abilities"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/rb_difficult_value"
            ></ListView>

    </android.support.constraint.ConstraintLayout>

</ScrollView>